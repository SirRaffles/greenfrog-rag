# GreenFrog RAG Avatar Chatbot - Environment Configuration

# ============================================
# Local LLM Configuration
# ============================================

# Ollama is running on host (no API key needed)
# Access via: http://host.docker.internal:11434

# Ollama model to use (already downloaded on your NAS)
OLLAMA_MODEL=llama3.1:8b

# Alternative models available:
# - llama3.2:3b (fastest, 2GB)
# - llama3.1:8b (recommended, 4.9GB)
# - mixtral:8x7b (reasoning, 26GB)
# - llama3.3:70b (best quality, 42GB)

# ============================================
# Service Ports
# ============================================

# Frontend (Next.js)
FRONTEND_PORT=3000

# Backend API (FastAPI)
BACKEND_PORT=8000

# AnythingLLM (RAG Core)
ANYTHINGLLM_PORT=3001

# ChromaDB (Vector Database)
CHROMADB_PORT=8001

# Piper TTS (Text-to-Speech)
PIPER_TTS_PORT=5000

# SadTalker (Avatar Generation)
SADTALKER_PORT=10364

# ============================================
# Storage Paths
# ============================================

# Data storage
DATA_PATH=/volume1/docker/greenfrog-rag/data

# Log storage
LOGS_PATH=/volume1/docker/greenfrog-rag/logs

# Scraped content
SCRAPED_PATH=/volume1/docker/greenfrog-rag/data/scraped

# ============================================
# RAG Configuration
# ============================================

# Number of documents to retrieve
RAG_TOP_K=5

# Minimum similarity threshold (0.0-1.0)
RAG_SIMILARITY_THRESHOLD=0.7

# Document chunk size (tokens)
RAG_CHUNK_SIZE=1000

# Chunk overlap (tokens)
RAG_CHUNK_OVERLAP=200

# ============================================
# LLM Parameters
# ============================================

# Temperature (0.0-1.0, higher = more creative)
LLM_TEMPERATURE=0.7

# Max tokens in response
LLM_MAX_TOKENS=2000

# Context window
LLM_CONTEXT_LENGTH=8192

# Number of threads for CPU inference
OLLAMA_NUM_THREADS=6

# ============================================
# TTS Configuration
# ============================================

# Piper voice model
# Options: en_US-lessac-medium, en_US-amy-medium, en_US-libritts-high
PIPER_VOICE_MODEL=en_US-lessac-medium

# Speaking rate (0.5-2.0)
TTS_SPEAKING_RATE=1.0

# ============================================
# Avatar Configuration
# ============================================

# SadTalker pose style
# Options: still, normal, enhanced
AVATAR_POSE_STYLE=normal

# SadTalker expression scale (0.0-3.0)
AVATAR_EXPRESSION_SCALE=1.0

# Avatar FPS
AVATAR_FPS=25

# ============================================
# Scraper Configuration
# ============================================

# Website to scrape
WEBSITE_URL=https://www.thematchainitiative.com

# Scrape schedule (cron format: min hour day month weekday)
# Default: 2 AM daily
SCRAPE_SCHEDULE=0 2 * * *

# User agent
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; GreenFrogBot/1.0; +http://v4value.ai)

# Request delay (seconds)
SCRAPER_DELAY=1.0

# Max concurrent requests
SCRAPER_MAX_CONCURRENT=5

# ============================================
# CORS Configuration
# ============================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://192.168.50.171:3000,http://greenfrog.v4value.ai

# ============================================
# Logging
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable request logging
LOG_REQUESTS=true

# ============================================
# Performance
# ============================================

# Backend worker count
BACKEND_WORKERS=4

# Request timeout (seconds)
REQUEST_TIMEOUT=120

# Max avatar queue size
AVATAR_QUEUE_SIZE=5

# ============================================
# Development
# ============================================

# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD=false

# Development mode
NODE_ENV=production
